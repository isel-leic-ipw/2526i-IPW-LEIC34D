<section class="container p-2">
<h2> List of Tasks: </h2>

<!-- Show a task in each row of a table -->
<table class="table text-nowrap">
    <tr>
        <th> Title </th>
        <th> </th>
        <th> </th>
    </tr>
    {{#each tasks}}
    <tr>
        <td> <a href="/site/tasks/{{this.id}}">{{this.title}}</a> </td>
        <td width="5%">
            <a href="/site/tasks/{{this.id}}" class="btn btn-warning"> Edit </a>
        </td>
            
        <td width="5%">
            <form action="/site/tasks/{{this.id}}/delete" method="POST">
                <input type="submit" value="del" class="btn btn-danger">
            </form>
        </td>
    </tr>
    {{/each}}
</table>
</section>